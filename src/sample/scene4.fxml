<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            fx:controller="sample.ForthScene">
    <center>
        <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <VBox fx:id="labelsLayout" prefHeight="200.0" prefWidth="100.0">
                <HBox.margin>
                    <Insets left="20.0" top="20.0"/>
                </HBox.margin>
            </VBox>
            <VBox fx:id="sizeLayout" prefHeight="200.0" prefWidth="100.0">
                <HBox.margin>
                    <Insets left="20.0" top="20.0"/>
                </HBox.margin>
            </VBox>
            <VBox fx:id="addressLayout" prefHeight="200.0" prefWidth="100.0">
                <HBox.margin>
                    <Insets left="20.0" top="20.0"/>
                </HBox.margin>
            </VBox>
        </HBox>
    </center>
    <bottom>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="23.0" minHeight="9.0" prefHeight="9.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="51.0" minHeight="10.0" prefHeight="51.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Button fx:id="okBTN" mnemonicParsing="false" prefHeight="47.0" prefWidth="300.0" text="OK"
                    GridPane.rowIndex="1"/>
            <Button fx:id="nextBTN" mnemonicParsing="false" prefHeight="48.0" prefWidth="300.0" text="Next"
                    GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        </GridPane>
    </bottom>
</BorderPane>
